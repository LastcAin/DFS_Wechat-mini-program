page {    
  display: block;
  min-height: 100%;
  background-color: #f6f6f6;
  position: relative;
}
.container{
  padding: 1rem 0 1rem 0;
  line-height: 1.5rem;
}
.coupontitle{
  width: 100%;
  padding-left: 1rem;
  margin-bottom: 1rem;
}
form {
  width: 100%;
  background-color: #fff;
}
.section{
  width: 100%;
  height: 90rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
  border-bottom:1rpx solid #ddd;
  padding-left:20rpx; 
}
.section input{
    padding-left:20rpx;
}
.submit {
  background-color:#1aad19;
  color: #fff;
  bottom: 80rpx;
  height: 80rpx;
  position: absolute;
  width: 100%;
}
.reset{
  background-color:#ff0000; 
  color: #fff;
  bottom: 0; 
  height:80rpx;
  position: absolute; 
  width: 100%;
}
button{
  height:80rpx;
  line-height: 80rpx;
  width: 100%;
  border-radius:0;
}
